CREATE TABLE IF NOT EXISTS RefEntity (
    id TEXT PRIMARY KEY,
    book TEXT NOT NULL,
    chapter TEXT NOT NULL,
    verse TEXT NOT NULL,
    phraseId TEXT NOT NULL,
    FOREIGN KEY (phraseId) REFERENCES PhraseEntity (id) ON DELETE CASCADE
);

getByPhrase:
SELECT * FROM RefEntity WHERE phraseId = :phraseId;

insert:
INSERT OR REPLACE INTO RefEntity(id, book, chapter, verse, phraseId)
VALUES (?, ?, ?, ?, ?);

delete:
DELETE FROM RefEntity WHERE id = :id;